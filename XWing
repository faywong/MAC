#!/bin/sh
#XWING_HOST=
#XWING_PASS=

usage()
{
	echo "Usage: $0 <[start]|restart|stop|status|update|help>"
	echo
	echo "$0 [-v[0-5]] <HOST> <PASS>"
	echo
}

iface()
{
	sdev=`route get example.com 2> /dev/null | grep interface`
	sdev=${sdev:13}
	while read -r line; do
		echo $line | grep $sdev > /dev/null 2>&1
		if [ $? = 0 ]; then
			IFACE=${last_line:4}
			break
		fi
		last_line=$line
	done <<< "$(networksetup -listnetworkserviceorder)"

	if [ -z "$IFACE" ]; then
		>&2 echo "Could not find current service"
		exit 1
	fi	
}

start()
{
	if [ ! -z $2 ]; then
		XWING_HOST=$2
		XWING_PASS=$3
	fi

	if [ -z "$XWING_HOST" ]; then
		usage
		return
	fi

	if [ -z "$XWING_PASS" ]; then
		SOCKS_HOST=$XWING_HOST
		SOCKS_PORT=1080
		SERVER_MODE=Socks5
	elif [ "$XWING_PASS" -gt 0 ] 2>/dev/null && [ "$XWING_PASS" -lt 65535 ] 2>/dev/null; then
		SOCKS_HOST=$XWING_HOST
		SOCKS_PORT=$XWING_PASS
		SERVER_MODE=Socks5
	else
		SOCKS_HOST=127.0.0.1
		SOCKS_PORT=1080
		SERVER_MODE=Trojan
	fi

	iface
	echo "Local Network: $IFACE"
	echo "Remote $SERVER_MODE: $XWING_HOST"
	echo "export ALL_PROXY=socks5://$SOCKS_HOST:$SOCKS_PORT"
	networksetup -setsocksfirewallproxy $IFACE $SOCKS_HOST $SOCKS_PORT

	[ "$SERVER_MODE" == "Socks5" ] && return

	echo "{\"local_addr\":\"0.0.0.0\",\"local_port\":1080,\"remote_addr\":\"$XWING_HOST\",\"remote_port\":443,\"password\":[\"$XWING_PASS\"],\"log_level\":$1,\"ssl\":{\"verify\":false}}" > /tmp/trojan.conf
	if [ $1 -ge 2 ]; then
		nohup trojan -c /tmp/trojan.conf &> /tmp/trojan.log &
	else
		trojan -c /tmp/trojan.conf
		networksetup -setsocksfirewallproxystate $IFACE off
	fi
}

stop()
{
	iface
	networksetup -setsocksfirewallproxystate $IFACE off
	if [ -f /tmp/trojan.conf ]; then
		rm /tmp/trojan.conf
		killall trojan
	fi
}

status()
{
	tail -f /tmp/trojan.log
}

case "$1" in
	-h|help)
		usage
		;;
	start)
		start 2 $2 $3
		;;
	stop)
		stop
		;;
	restart)
		stop
		start 2 $2 $3
		;;
	s|status)
		status
		;;
	-v0|-v1|-v2|-v3|-v4|-v5)
		start ${1:2} $2 $3 $4 $5
		;;
	-v)
		start 0 $2 $3
		;;
	*)
		start 1 $1 $2
		;;
esac


